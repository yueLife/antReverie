{% macro input(type, id, class, name, value='', placeholder='') %}
    <input type="{{ type|default('text') }}" id="{{ id }}" class="{{ class|default('form-control placeholder-no-fix form-group') }}" name="{{ name }}" value="{{ value }}" placeholder="{{ placeholder }}" autocomplete="off" />
{% endmacro input %}

{% macro colInput(type, id, class, name, value, placeholder)%}
    {% import _self as forms %}

    <div class="col-sm-6 col-xs-12">
        {{ forms.input(type, id, class, name, value, placeholder) }}
    </div>
{% endmacro colInput %}
