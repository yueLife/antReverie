{% extends "PublicBundle::Layouts/baseLayout.html.twig" %}

{% use "PublicBundle::Modules/Plugins/datatable.html.twig" %}
{% use "PublicBundle::Modules/Plugins/upload.html.twig" %}

{% block pagePluginsStyles %}
    {{ block("datatablePluginsStyles") }}
    {{ block("fileUpPluginsStyles") }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="iconfont icon-file font-white"></i>
                        <span class="caption-subject bold uppercase">所有文件</span>
                    </div>
                    <div class="actions">
                        <a href="#file-upload-modal" class="btn btn-sm default btn-outline" data-toggle="modal">
                            <i class="iconfont icon-upload"></i> 文件上传 </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-hover order-column fl all-files-table">
                        <thead>
                        <tr>
                            <th style="width:50px !important;">ID</th>
                            <th style="width:300px !important;">文件名</th>
                            <th style="width:80px !important;">上传者</th>
                            <th style="width:150px !important;">上传时间</th>
                            <th style="width:50px !important;">状态</th>
                            <th style="width:50px !important;">操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for file in uploadFiles if file.del is sameas(false) %}
                            <tr>
                                <td>{{ file.id }}</td>
                                <td data-filename="{{ file.filename }}">{{ file.oldname }}</td>
                                <td>{{ file.user.username }}</td>
                                <td>{{ file.uploadTime.date|date("Y-m-d H:i:s") }}</td>
                                <td>
                                    {% if file.state == "read" %}
                                        {% set state = "success" %}
                                        {% set title = "已读" %}
                                    {% elseif file.state == "unread" %}
                                        {% set state = "warning" %}
                                        {% set title = "未读" %}
                                    {% elseif file.state == "wrong" %}
                                        {% set state = "danger" %}
                                        {% set title = "错误" %}
                                    {% endif %}
                                    <button type="button" class="btn btn-xs btn-{{ state }}">{{ title }}</button>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-xs default green-meadow-stripe download-file-btn">下载</button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% set chooseFile = true %}
    {{ block("uploadModal") }}
{% endblock %}

{% block pagePluginsScripts %}
    {{ block("datatablePluginsScripts") }}
    {{ block("fileUpPluginsScripts") }}
{% endblock %}

{% block javascripts %}
    {{ block("datatableJavascripts") }}
    {{ block("fileUpJavascripts") }}
    <script type="text/javascript">
        var table = datatable($(".all-files-table"));
        $(function(){
            $(document).on("click", ".download-file-btn", function () {
                var td = $(this).closest("tr").children("td");

                $.ajax({
                    url: "{{ path("downloadFileAjax") }}",
                    type: "post",
                    dataType: "json",
                    data: { "id": td.eq(0).html(), "filename": td.eq(1).attr("data-filename")}
                }).done(function (data) {
                    if (data.state === "success") {
                        toastr.success("正在下载，请稍后！", "成功");
                        download(data.src);
                    } else if (data === "error") {
                        toastr.error("没有找到该文件！请重试！", "失败");
                    }
                }).fail(function () {
                    toastr.error("未知错误！", "错误");
                });
            });
        });
        function addNewFile(file){
            state = '<button type="button" class="btn btn-xs btn-warning"> 未读 </button>';
            operate = '<button type="button" class="btn btn-xs default green-meadow-stripe download-file-btn"> 下载 </button>';
            var tr = addRow(table, [file.id, file.name, "{{ app.user.getUsername() }}", file.uploadTime, state, operate]);
            tr.find("td:eq(1)").attr("data-filename", file.filename);
        }
    </script>
{% endblock %}
