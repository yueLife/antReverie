{% extends "PublicBundle::Layouts/baseLayout.html.twig" %}

{% block pagePluginsStyles %}
    <link rel="stylesheet" href="{{ asset(GLOBAL~'plugins/bootstrap-colorpicker/css/colorpicker.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset(GLOBAL~'plugins/jquery-minicolors/jquery.minicolors.css') }}" type="text/css">
{% endblock %}

{% block pageStyles %}
    <link rel="stylesheet" href="{{ asset(SHELF_CSS~route|replace({'_': '/', '_Model': '_Model'})~'.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset(SHELF_CSS~'shelfContent.css') }}" type="text/css" />
{% endblock %}

{% block stylesheets %}
    <style>
        .tabbable-line>.tab-content{ padding:10px 0; }
        .form-group.form-md-line-input{ margin: 0px; }
        .padding-top{ padding-top:0px !important; }
    </style>
{% endblock %}

{% macro preview(titleAnchor, textAnchor) %}
    <div class="col-md-6">
        <div class="form-group form-md-line-input form-md-floating-label">
            <input type="text" id="{{ titleAnchor }}" class="form-control" value="标题" readonly>
            <label for="{{ titleAnchor }}"> 预览 </label>
            <textarea id="{{ textAnchor }}" class="form-control" style="resize:none;" rows="15" readonly>
数字：0123456789
小写字母：abcdefghijklmnopqrstuvwxyz
大写字母：ABCDEFGHIJKLMNOPQRSTUVWXYZ
常用中文符号：￥。，：；“”‘’（）
常用英文符号：$ . , : ; " " ' ' ( )
注意事项：当前所展示的前端样式，并不能保证与在天猫/京东上的样式一致。天猫/京东会过滤某些样式，实际以天猫/京东上显示为准。</textarea>                     </div>
    </div>
{% endmacro %}

{% macro colorPick(anchor, name, value) %}
    <div class="form-group form-md-line-input form-md-floating-label has-success padding-top">
        <label for="{{ anchor }}"> 字体颜色 </label>
        <input type="text" id="{{ anchor }}" class="form-control demo" name="{{ name }}" value="#{{ value }}"data-control="hue" data-position="bottom right" >
    </div>
{% endmacro %}

{% block content %}
    {% import _self as shelf %}
    <div class="portlet light">
        <div class="portlet-body">
            <div id="shelf" style="overflow:auto;">
                <div class="row">
                    <div class="portlet light shelf-div fl">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="iconfont icon-shelf font-size-18"></i>
                                <span class="caption-subject bold uppercase"> 货架样式</span>
                            </div>
                            <div class="actions">
                                <button class="btn btn-circle green-jungle add-all-btn">
                                    <i class="iconfont icon-plus font-size-16"></i> 全部添加 </button>
                                <button class="btn btn-circle yellow-crusta delete-all-btn">
                                    <i class="iconfont icon-trash font-size-16"></i> 全部移除 </button>
                            </div>
                        </div>
                        <div class="portlet-body shelf-data shelf-new-data">
                        </div>
                        <div class="shelf-code-data display-hide"></div>
                    </div>
                    <div class="portlet light shelf-div fr">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="iconfont icon-content font-weight-bold"></i>
                                <span class="caption-subject bold uppercase"> 货架数据</span>
                            </div>
                        </div>
                        <div class="portlet-body shelf-data shelf-old-data">
                            {% block shelfContent %}{% endblock %}
                        </div>
                    </div>
                    <div class="shelf-tmp display-hide"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- display-model-modal -->
    <div class="modal fade bs-modal-lg" id="display-model-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title"> 获取模板 </h4>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal"> 关闭 </button>
                </div>
            </div>
        </div>
    </div>

    <!-- general-settings-modal -->
    <div class="modal fade bs-modal-lg" id="general-settings-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="tabbable-line tabs-below">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <ul class="nav nav-tabs">
                            {{ layouts.liTabPane('create-code-tab', 'edit', '生成代码') }}
                            {{ layouts.liTabPane('edit-style-tab', 'spanner', '设置样式', 'active') }}
                            {{ layouts.liTabPane('set-tag-tab', 'tag', '设置标签') }}
                            {{ layouts.liTabPane('add-screen-tab', 'screen', '添加通屏') }}
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane create-code-tab">
                                <div style="height:350px;">
                                    <div class="row">
                                        <textarea class="form-control code-textarea" style="resize:none;" rows="18"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane active edit-style-tab">
                                <div style="height:350px;">
                                    <div class="col-md-2 col-sm-2 col-xs-2">
                                        <ul class="nav nav-tabs tabs-left">
                                            {{ layouts.liTabPane('style-act-tab', '', '活动价', 'active') }}
                                            {{ layouts.liTabPane('style-cou-tab', '', '优惠价') }}
                                            {{ layouts.liTabPane('style-tag-tab', '', '吊牌价') }}
                                            {{ layouts.liTabPane('style-color-tab', '', '样式颜色') }}
                                        </ul>
                                    </div>
                                    <div class="col-md-10 col-sm-10 col-xs-10">
                                        <div class="tab-content">
                                            <div class="tab-pane active in style-act-tab">
                                                <form role="form">
                                                    <div class="form-body">
                                                        <div class="col-md-6">
                                                            {{ metronic.floatingInput("act-name", "", "fontName", "", "标题") }}
                                                            {{ metronic.floatingInput("act-size", "", "fontSize", "", "字体大小") }}
                                                            {{ metronic.floatingInput("act-family", "", "fontFamily", "", "字体族科") }}
                                                            {{ shelf.colorPick("act-font-color", "fontColor", "a7292f") }}
                                                            <div class="form-group form-md-checkboxes">
                                                                <label> 常用样式 </label>
                                                                <div class="md-checkbox-inline">
                                                                    {{ metronic.floatingCheckbox("act-weight", "fontWeight", "粗体") }}
                                                                    {{ metronic.floatingCheckbox("act-italic", "fontItalic", "斜体") }}
                                                                </div>
                                                                <div class="md-radio-inline">
                                                                    {{ metronic.floatingRadio("act-line-through", "line", "through", "中划线") }}
                                                                    {{ metronic.floatingRadio("act-line-under", "line", "under", "下划线") }}
                                                                    {{ metronic.floatingRadio("act-line-none", "line", "none", "没有", "ture") }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                        {{ shelf.preview("act-title-preview", "act-title-preview") }}
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="tab-pane fade style-cou-tab">
                                                <form role="form">
                                                    <div class="form-body">
                                                        <div class="col-md-6">
                                                            {{ metronic.floatingInput("cou-name", "", "fontName", "", "标题") }}
                                                            {{ metronic.floatingInput("cou-size", "", "fontSize", "", "字体大小") }}
                                                            {{ metronic.floatingInput("cou-family", "", "fontFamily", "", "字体族科") }}
                                                            {{ shelf.colorPick("cou-font-color", "fontColor", "295ead") }}
                                                            <div class="form-group form-md-checkboxes">
                                                                <label> 常用样式 </label>
                                                                <div class="md-checkbox-inline">
                                                                    {{ metronic.floatingCheckbox("cou-weight", "fontWeight", "粗体") }}
                                                                    {{ metronic.floatingCheckbox("cou-italic", "fontItalic", "斜体") }}
                                                                </div>
                                                                <div class="md-radio-inline">
                                                                    {{ metronic.floatingRadio("cou-line-through", "line", "through", "中划线") }}
                                                                    {{ metronic.floatingRadio("cou-line-under", "line", "under", "下划线") }}
                                                                    {{ metronic.floatingRadio("cou-line-none", "line", "none", "没有", "ture") }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                        {{ shelf.preview("cou-title-preview", "cou-title-preview") }}
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="tab-pane fade style-tag-tab">
                                                <form role="form">
                                                    <div class="form-body">
                                                        <div class="col-md-6">
                                                            {{ metronic.floatingInput("tag-name", "", "fontName", "", "标题") }}
                                                            {{ metronic.floatingInput("tag-size", "", "fontSize", "", "字体大小") }}
                                                            {{ metronic.floatingInput("tag-family", "", "fontFamily", "", "字体族科") }}
                                                            {{ shelf.colorPick("tag-font-color", "fontColor", "c71616") }}
                                                            <div class="form-group form-md-checkboxes">
                                                                <label> 常用样式 </label>
                                                                <div class="md-checkbox-inline">
                                                                    {{ metronic.floatingCheckbox("tag-weight", "fontWeight", "粗体") }}
                                                                    {{ metronic.floatingCheckbox("tag-italic", "fontItalic", "斜体") }}
                                                                </div>
                                                                <div class="md-radio-inline">
                                                                    {{ metronic.floatingRadio("tag-line-through", "line", "through", "中划线") }}
                                                                    {{ metronic.floatingRadio("tag-line-under", "line", "under", "下划线") }}
                                                                    {{ metronic.floatingRadio("tag-line-none", "line", "none", "没有", "ture") }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                        {{ shelf.preview("tag-title-preview", "tag-title-preview") }}
                                                    </div>
                                                </form>
                                            </div>
                                            <div class="tab-pane fade style-color-tab">
                                                <p>4</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane set-tag-tab">
                                <div style="height: 200px;">
                                    <h4> 设置标签 </h4>
                                </div>
                            </div>
                            <div class="tab-pane add-screen-tab">
                                <div style="height: 200px;">
                                    <h4> 添加通屏 </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="tab-content">
                        <div class="tab-pane create-code-tab">
                            <button type="button" class="btn dark btn-outline copy-code-btn"> 复制代码 </button>
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal"> 关闭 </button>
                        </div>
                        <div class="tab-pane active edit-style-tab">
                            <button type="button" class="btn dark btn-outline style-use-btn"> 使用 </button>
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal"> 关闭 </button>
                        </div>
                        <div class="tab-pane set-tag-tab">
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal"> 关闭 </button>
                        </div>
                        <div class="tab-pane add-screen-tab">
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal"> 关闭 </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block pagePluginsScripts %}
    <script src="{{ asset(PLUGINS~'ZeroClipboard/ZeroClipboard.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset(GLOBAL~'plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js') }}" type="text/javascript"></script>
    <script src="{{ asset(GLOBAL~'plugins/jquery-minicolors/jquery.minicolors.min.js') }}" type="text/javascript"></script>
{% endblock %}

{% block pageScripts %}
    <script src="{{ asset(PAGES~'scripts/components-color-pickers.min.js') }}" type="text/javascript"></script>

    <script src="{{ asset(SHELF_JS~'shelfContent.js') }}" type="text/javascript"></script>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        var lineNum = {{ model.lineNum|default(3) }};
        $(function(){
            $('#general-settings-modal').modal('show');
            $(document).on('click', '.style-use-btn', function () {
                var act = $(".style-act-tab form").serialize();
                var cou = $(".style-cou-tab form").serialize();
                var tag = $(".style-tag-tab form").serialize();
                console.log(act);
            });
        });
    </script>
{% endblock %}
