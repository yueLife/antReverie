{# colorPick.js Plugin twig #}
{# pagePluginsStyles #}
{% block CPPluginsStyles %}
    <link rel="stylesheet" href="{{ asset(GLOBAL~"plugins/bootstrap-colorpicker/css/colorpicker.css") }}" type="text/css">
    <link rel="stylesheet" href="{{ asset(GLOBAL~"plugins/jquery-minicolors/jquery.minicolors.css") }}" type="text/css">
{% endblock %}

{# pagePluginsScripts #}
{% block CPPluginsScripts %}
    <script src="{{ asset(GLOBAL~"plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.js") }}" type="text/javascript"></script>
    <script src="{{ asset(GLOBAL~"plugins/jquery-minicolors/jquery.minicolors.min.js") }}" type="text/javascript"></script>
{% endblock %}

{# javascripts #}
{% block CPJavascripts %}
    <script type="text/javascript">
        $(function(){
            $(".color-pick").each(function() {
                $(this).minicolors({
                    control: $(this).attr("data-control") || "hue",
                    defaultValue: $(this).attr("data-defaultValue") || "#000",
                    inline: $(this).attr("data-inline") === "true",
                    letterCase: $(this).attr("data-letterCase") || "uppercase",
                    opacity: $(this).attr("data-opacity"),
                    position: $(this).attr("data-position") || "bottom left",
                    theme: "bootstrap"
                });

            });
        })
    </script>
{% endblock %}
