{# Admin Dashboard #}
{% macro dashboard(name, value, href, icon, color) %}
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a class="dashboard-stat dashboard-stat-v2 {{ color }}" href="#">
            <div class="visual">
                <i class="iconfont icon-{{ icon }}"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="{{ value }}">0</span>
                </div>
                <div class="desc"> 总{{ name }}数 </div>
            </div>
        </a>
    </div>
{% endmacro dashboard %}

{# Global Alert Message #}
{% macro alertSkip(type, msg, url, class) %}
    <div class="alert alert-{{ type }} {{ class|default('display-hide') }}">
        <p> {{ msg }} </p>
        <p>3 秒后跳转！<a href="{{ path(url) }}">立即前往&gt;&gt;</a></p>
    </div>
{% endmacro alertSkip %}

{% macro alertClose(type, msg, class) %}
    <div class="alert alert-{{ type }} {{ class|default('display-hide') }}">
        <button class="close" data-close="alert"></button>
        <p> {{ msg }} </p>
    </div>
{% endmacro alertClose %}


{% macro filetable(tableClass, Files, func) %}
    <table class="table table-striped table-hover order-column {{ tableClass }}">
        <thead>
        <tr>
            <th style="width:50px !important;">ID</th>
            <th style="width:300px !important;">文件名</th>
            <th style="width:150px !important;">上传时间</th>
            <th style="width:50px !important;">状态</th>
            <th style="width:100px !important;">操作</th>
            <th style="width:500px !important;">功能</th>
        </tr>
        </thead>
        <tbody>
        {% for file in Files %}
            <tr>
                <td>{{ file.id }}</td>
                <td data-filename="{{ file.filename }}">{{ file.oldname }}</td>
                <td>{{ file.uploadTime }}</td>
                <td>
                    {% if file.state == 'read' %}
                        {% set state = 'success' %}
                        {% set title = '已读' %}
                    {% elseif file.state == 'unread' %}
                        {% set state = 'warning' %}
                        {% set title = '未读' %}
                    {% elseif file.state == 'wrong' %}
                        {% set state = 'danger' %}
                        {% set title = '错误' %}
                    {% endif %}
                    <button type="button" class="btn btn-xs btn-{{ state }}">{{ title }}</button>
                </td>
                <td>
                    <button type="button" class="btn btn-xs default red-stripe delete-file-btn">删除</button>
                    <button type="button" class="btn btn-xs default green-meadow-stripe">下载</button>
                </td>
                <td>
                    {% for func in func %}
                        <a href="#{{ func.route }}" class="btn btn-link btn-xs font-size-14">{{ func.title }}</a>
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endmacro %}
