{% extends "PublicBundle::Layouts/baseLayout.html.twig" %}

{% use "PublicBundle::Modules/Plugins/datatable.html.twig" %}
{% use "PublicBundle::Modules/Plugins/upload.html.twig" %}

{% block pagePluginsStyles %}
    {{ block("datatablePluginsStyles") }}
    {{ block("fileUpPluginsStyles") }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption font-white">
                        <i class="iconfont icon-file font-size-20 font-white"></i>
                        <span class="caption-subject bold uppercase"> 我的文件 </span>
                    </div>
                    <div class="actions">
                        <a href="#file-upload-modal" class="btn btn-sm default btn-outline" data-toggle="modal">
                            <i class="iconfont icon-upload"></i> 文件上传 </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-hover order-column my-files-table">
                        <thead>
                            <tr>
                                <th style="width:50px !important;"> ID </th>
                                <th style="width:300px !important;"> 文件名 </th>
                                <th style="width:50px !important;"> 状态 </th>
                                <th style="width:80px !important;"> 文件类型 </th>
                                <th style="width:130px !important;"> 上传时间 </th>
                                <th style="width:80px !important;"> 操作 </th>
                                {% spaceless %}
                                {% if shelfModels|length > 3 %}
                                    {% set width = shelfModels|length * 65 %}
                                {% else %}
                                    {% set width = 200 %}
                                {% endif %}
                                {% endspaceless -%}
                                <th style="width:{{ width }}px !important;"> 功能 </th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for file in uploadFiles %}
                            <tr>
                                <td> {{ file.id }} </td>
                                <td data-filename="{{ file.filename }}"> {{ file.oldname }} </td>
                                <td>
                                    {% if file.state == "read" %}
                                        {% set state = "success" %}
                                        {% set title = "已读" %}
                                    {% elseif file.state == "unread" %}
                                        {% set state = "warning" %}
                                        {% set title = "未读" %}
                                    {% elseif file.state == "wrong" %}
                                        {% set state = "danger" %}
                                        {% set title = "错误" %}
                                    {% endif %}
                                    <button type="button" class="btn btn-xs btn-{{ state }}"> {{ title }} </button>
                                </td>
                                <td>
                                    {% if file.fileType == "goodsFile" %}
                                        货架文件
                                    {% elseif file.fileType == "wordsFile" %}
                                        检测文件
                                    {% elseif file.fileType == "unusedWordsFile" %}
                                        禁词文件
                                    {% endif %}
                                </td>
                                <td> {{ file.uploadTime }} </td>
                                <td>
                                    <button type="button" class="btn btn-xs default red-stripe delete-file-btn"> 删除 </button><button type="button" class="btn btn-xs default green-meadow-stripe download-file-btn"> 下载 </button>
                                </td>
                                <td>
                                    {% if file.fileType == "goodsFile" %}
                                        {% for m in shelfModels -%}
                                        <a class="btn btn-link btn-xs font-size-14 display-model-btn" data-id="{{ file.id }}" data-route="{{ m.route }}"> {{ m.title }} </a>
                                        {%- endfor %}
                                    {% elseif file.fileType == "wordsFile" %}
                                        <a class="btn btn-link btn-xs font-size-14"> 检测文件 </a>
                                    {% elseif file.fileType == "unusedWordsFile" %}
                                        <a class="btn btn-link btn-xs font-size-14"> 读取文件 </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% set chooseFile = true %}
    {{ block("uploadModal") }}
{% endblock %}

{% block pagePluginsScripts %}
    {{ block("datatablePluginsScripts") }}
    {{ block("fileUpPluginsScripts") }}
{% endblock %}

{% block javascripts %}
    {{ block("datatableJavascripts") }}
    {{ block("fileUpJavascripts") }}
    <script type="text/javascript">
        var table = datatable($(".my-files-table"));
        $(function(){
            $(document).on("click", ".display-model-btn", function () {
                var _this = $(this);
                var _btn = _this.closest("td").prevAll("td:eq(3)").children("button");

                toastr.info("正在读取文件，请稍后...", "提示", {
                    positionClass: "toast-top-center",
                    timeOut: "3000"
                });
                $.ajax({
                    url: "{{ path("getShelfFileDataAjax") }}",
                    type: "post",
                    dataType: "json",
                    data: { "id": _this.attr("data-id") }
                }).done(function (data) {
                    setTimeout(function(){
                        toastr.remove();
                        switch (data["state"]) {
                            case "error":
                                _btn.attr("class", "btn btn-xs btn-danger").html("错误");
                                toastr.error(data["message"], "提示"); break;
                            case "success":
                                _btn.attr("class", "btn btn-xs btn-success").html("已读");
                                window.location.href = "{{ path("displayModel") }}/" + _this.attr("data-id") + "/" + _this.attr("data-route");
                                toastr.success(data["message"], "提示"); break;
                        }
                    }, 2500)
                }).fail(function () {
                    setTimeout(function(){
                        toastr.remove();
                        _btn.attr("class", "btn btn-xs btn-danger").html("错误");
                        toastr.error("未知错误！请重试！", "提示");
                    }, 2500)

                });
            });
            $(document).on("click", ".delete-file-btn", function () {
                var td = $(this).closest("tr").children("td");

                $.ajax({
                    url: "{{ path("deleteFileAjax") }}",
                    type: "post",
                    dataType: "json",
                    data: { "id": td.eq(0).html(), "filename": td.eq(1).attr("data-filename")}
                }).done(function (data) {
                    if (data === "success") {
                        toastr.success("该文件已成功删除！", "成功");
                        removeRow(table, td.closest("tr"));
                    } else if (data === "error") {
                        toastr.error("没有找到该文件！请重试！", "失败");
                    }
                }).fail(function () {
                    toastr.error("未知错误！", "错误");
                });
            });
            $(document).on("click", ".download-file-btn", function () {
                var td = $(this).closest("tr").children("td");

                $.ajax({
                    url: "{{ path("downloadFileAjax") }}",
                    type: "post",
                    dataType: "json",
                    data: { "id": td.eq(0).html(), "filename": td.eq(1).attr("data-filename")}
                }).done(function (data) {
                    if (data.state === "success") {
                        toastr.success("正在下载，请稍后！", "成功");
                        download(data.src);
                    } else if (data === "error") {
                        toastr.error("没有找到该文件！请重试！", "失败");
                    }
                }).fail(function () {
                    toastr.error("未知错误！", "错误");
                });
            });
        });
        function addNewFile(file){
            state = '<button type="button" class="btn btn-xs btn-warning"> 未读 </button>';
            operate = '<button type="button" class="btn btn-xs default red-stripe delete-file-btn"> 删除 </button><button type="button" class="btn btn-xs default green-meadow-stripe download-file-btn"> 下载 </button>';

            switch (file.fileType) {
                case "goodsFile":
                    fileType = "货架文件";
                    func = '{% for m in shelfModels %}<a class="btn btn-link btn-xs font-size-14 display-model-btn" data-id="' + file.id + '" data-route="{{ m.route }}"> {{ m.title }} </a>{% endfor %}';
                    break;
                case "wordsFile":
                    fileType = "检测文件";
                    func = '<a class="btn btn-link btn-xs font-size-14"> 检测文件 </a>';
                    break;
                case "unusedWordsFile":
                    fileType = "禁词文件";
                    func = '<a class="btn btn-link btn-xs font-size-14"> 读取文件 </a>';
                    break;
                default :
                    fileType = "未知文件";
                    func = "未知";
                    break;
            }
            var tr = addRow(table, [file.id, file.name, state, fileType, file.uploadTime, operate, func]);
            tr.find("td:eq(1)").attr("data-filename", file.filename);
        }
    </script>
{% endblock %}
