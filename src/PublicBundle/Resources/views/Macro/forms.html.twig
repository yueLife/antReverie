{% macro input(name, value='', type='text', placeholder='') %}
    <input class="form-control placeholder-no-fix form-group" type="{{ type }}" autocomplete="off" placeholder="{{ placeholder }}" name="{{ name }}" value="{{ value }}" />
{% endmacro input %}

{% macro divCol(name, value='', type='text', placeholder='')%}
    {% import _self as forms %}

    <div class="col-sm-6 col-xs-12">
        {{ forms.input(name, value, type, placeholder) }}
    </div>
{% endmacro divCol %}
