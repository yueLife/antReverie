{% extends "PublicBundle:Global:base.html.twig" %}

{% block pageLevelPlugins %}
    <link rel="stylesheet" href="{{ asset(METRONIC_GLOBAL~'select2/css/select2.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset(METRONIC_GLOBAL~'select2/css/select2-bootstrap.min.css') }}" type="text/css" />
{% endblock %}

{% block pageLevelStyles %}
    <link rel="stylesheet" href="{{ asset(METRONIC_PAGES~'css/login-2.min.css') }}" type="text/css" />
{% endblock %}

{% block stylesheet %}
    <style>
        .alert a{ color:#3598dc !important; }
    </style>
{% endblock %}

{% block body %}
<body class="login">
    <div class="logo">
        <a href="{{ path('publicIndex') }}">
            <img src="{{ asset(PUBLIC_IMAGES~'logo330_82.png') }}" />
        </a>
    </div>
    <div class="content">
        {% if type == 'forgetPassword' %}
            <!-- BEGIN LOGIN FORM -->
            <form class="login-form" method="post">
                <div class="form-title">
                    <span class="form-title">{{ GLOBAL_TITLE }}</span>
                    <span class="form-subtitle">重置密码</span>
                </div>
                {{ messages.alertClose('success', msg, '') }}
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">密码</label>
                    {{ forms.input('password', '', 'password', '密码') }}
                </div>
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">确认密码</label>
                    {{ forms.input('rePassword', '', 'password', '确认密码') }}
                </div>
                <div class="form-actions">
                    <button type="button" class="btn red btn-block uppercase reset-password">重置</button>
                </div>
            </form>
            <!-- END LOGIN FORM -->
        {% elseif type == 'register' %}
            {{ messages.alertSkip('success', msg, 'loginRoute', '') }}
        {% else %}
            {{ messages.alertSkip('danger', msg, 'publicIndex', '') }}
        {% endif %}
    </div>
    <div class="copyright">
        <p> Copyright © {{ "now" | date("Y") }} {{ COPYWRITE }} {% include "PublicBundle::Footer/version.html.twig" %} </p>
    </div>
{% endblock %}

{% block footer %}{% endblock %}

{% block pageLevelPluginsScript %}
    <script src="{{ asset(METRONIC_GLOBAL~'plugins/jquery-validation/js/jquery.validate.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset(METRONIC_GLOBAL~'plugins/jquery-validation/js/additional-methods.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset(METRONIC_GLOBAL~'plugins/select2/js/select2.full.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset(METRONIC_GLOBAL~'plugins/backstretch/jquery.backstretch.min.js') }}" type="text/javascript"></script>
{% endblock %}

{% block pageLevelScripts %}
    <script src="{{ asset(METRONIC_PAGES~'scripts/login.min.js') }}" type="text/javascript"></script>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(function(){
            {% if type == 'forgetPassword' %}
            $(document).on('click', '.reset-password', function() {
                var token = '{{ token }}';
                var _input = $('.login-form input');
                var flag, msg;
                _input.each(function(index, el) {
                    if ($(this).val() == '') {
                        $(this).focus();
                        flag = 'none';
                        return false;
                    }
                });
                if (flag == 'none') {
                    msg = '密码不能为空，请输入您的密码！';
                } else if (_input.eq(0).val() != _input.eq(1).val()) {
                    msg = '两次密码不一致，请输入您的密码！';
                } else {
                    $('.alert').fadeOut();
                    $.ajax({
                        url: '{{ path('resetPasswordAjax') }}',
                        type: 'post',
                        dataType: 'json',
                        data: {'token': '{{ token }}', 'password': _input.eq(0).val()},
                    }).done(function(data) {
                        if (data.state) {
                            $('.alert').fadeIn().addClass('alert-success').removeClass('alert-danger').append('<p>3 秒后跳转！<a href="{{ path('loginRoute') }}">立即前往&gt;&gt;</a></p>').find('p:first').html(data.msg);
                            console.log(data.msg);
                            setTimeout(function() {
                                window.location.href = '{{ path('loginRoute') }}';
                            }, 3000);
                        }
                    }).fail(function(data) {
                        console.log(data);
                    });
                    return false;
                }
                $('.alert').fadeIn().addClass('alert-danger').removeClass('alert-success').find('p:first').html(msg);
            });
            {% else%}
            setTimeout(function() {
                window.location.href = '{{ type == 'register' ? path('loginRoute') : path('publicIndex') }}';
            }, 3000);
            {% endif %}
        })
    </script>
{% endblock %}
