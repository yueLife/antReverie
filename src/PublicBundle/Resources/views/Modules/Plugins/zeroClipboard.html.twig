{# ZeroClipboard.js Block#}
{# pagePluginsScripts #}
{% block ZCPluginsScripts %}
    <script src="{{ asset("bundles/public/plugins/zeroClipboard/ZeroClipboard.min.js") }}" type="text/javascript"></script>
{% endblock %}

{# Input Toastr #}
{# javascripts #}
{% block ZCJavascripts %}
    <script type="text/javascript">
        $(function (){
            var clip = new ZeroClipboard(ZCBtn);
            clip.on("copy", function () {
                clip.setText(ZCText.val());
            });
            clip.on("aftercopy", function () {
                if (typeof toastr === "undefined") {
                    alert("复制成功！");
                }else {
                    toastr.success("复制成功！", "提示");
                }
            });
        })
    </script>
{% endblock %}
