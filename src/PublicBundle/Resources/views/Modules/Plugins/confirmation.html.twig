{# bootstrap-confirmation.js Plugin twig #}
{# pagePluginsScripts #}
{% block confirmPluginsScripts %}
    <script src="{{ asset("Metronic/global/plugins/bootstrap-confirmation/bootstrap-confirmation.min.js") }}" type="text/javascript"></script>
{% endblock %}

{# javascripts #}
{% block confirmJavascripts %}
    <script type="text/javascript">
        $(function (){
            $("[data-toggle='confirmation']").confirmation({
                popout: "true",
                placement: "right",
                btnOkLabel: "确定",
                btnOkIcon: "iconfont icon-ok font-size-12",
                btnOkClass: "btn-success",
                btnCancelLabel: "取消",
                btnCancelIcon: "iconfont icon-remove font-size-12",
                btnCancelClass: "btn-danger"
            });
        })
