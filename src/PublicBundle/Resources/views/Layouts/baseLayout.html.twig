<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link rel="shortcut icon" href="{{ asset('bundles/public/images/logo.ico') }}">
    <title>{% block title %}{{ title|default('') }}{{ GLOBAL_TITLE_CH }}{% endblock %}</title>

    <!-- BEGIN GLOBAL PLUGINS STYLES -->
    <link rel="stylesheet" href="{{ asset(GLOBAL~'plugins/font-awesome/css/font-awesome.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset(GLOBAL~'plugins/simple-line-icons/simple-line-icons.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset(GLOBAL~'plugins/bootstrap/css/bootstrap.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset(GLOBAL~'plugins/bootstrap-switch/css/bootstrap-switch.min.css') }}" type="text/css" />
    <!-- END GLOBAL PLUGINS STYLES -->

    <!-- BEGIN PAGE PLUGINS STYLES -->
    {% block pagePluginsStyles %}{% endblock %}
    <!-- END PAGE PLUGINS STYLES -->

    <!-- BEGIN GLOBAL STYLES -->
    <link rel="stylesheet" href="{{ asset(PLUGINS~'Toastr/toastr.min.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset(GLOBAL~'css/components-rounded.min.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset(GLOBAL~'css/plugins.min.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset(PUBLIC_CSS~'global.css') }}" type="text/css">
    <!-- END GLOBAL STYLES -->

    <!-- BEGIN PAGE STYLES -->
    {% block pageStyles %}{% endblock %}
    <!-- END PAGE STYLES -->

    <!-- BEGIN GLOBAL LAYOUT STYLES -->
    {% block globalLayoutStyles %}
        <link rel="stylesheet" href="{{ asset(LAYOUTS~'layout4/css/layout.min.css') }}"  type="text/css" />
        <link rel="stylesheet" href="{{ asset(LAYOUTS~'layout4/css/themes/light.min.css') }}" type="text/css" id="style_color" />
    {% endblock %}
    <!-- END GLOBAL LAYOUT STYLES -->

    <link rel="stylesheet" href="{{ ICONFONT }}" type="text/css">
    {% block stylesheets %}{% endblock %}
</head>

{# IMPORT TWIG MACRO #}
{% import "PublicBundle::Modules/Macros/forms.html.twig" as forms %}
{% import "PublicBundle::Modules/Macros/layouts.html.twig" as layouts %}

{% use "PublicBundle::Modules/Blocks/header.html.twig" %}
{% use "PublicBundle::Modules/Blocks/footer.html.twig" %}

{% block body %}
<body class="page-container-bg-solid page-sidebar-closed-hide-logo page-header-fixed page-sidebar-fixed page-footer-fixed">
    {{ block('mainHeader') }}
    <div class="clearfix"></div>
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        {% set menu = knp_menu_get('sidebar', [], {'role': app.user.roles}) %}
        {{ knp_menu_render(menu, {'template': 'PublicBundle::Modules/Menus/sidebarMenu.html.twig', 'currentClass': 'active', 'ancestorClass': 'start active open'}) }}
        <div class="page-content-wrapper">
            <div class="page-content">
                {% block contentHeader %}
                    {{ block('pageHeader') }}
                {% endblock %}
                <div id="content-body">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
    <!-- END CONTAINER -->
{% endblock %}

{% block footer %}
    {{ block('mainFooter') }}
{% endblock %}

<!-- BEGIN GLOBAL PLUGINS SCRIPTS -->
<script src="{{ asset(GLOBAL~'plugins/jquery.min.js') }}" type="text/javascript"></script>
<script src="{{ asset(GLOBAL~'plugins/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
<script src="{{ asset(GLOBAL~'plugins/js.cookie.min.js') }}" type="text/javascript"></script>
<script src="{{ asset(GLOBAL~'plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js') }}" type="text/javascript"></script>
<script src="{{ asset(GLOBAL~'plugins/jquery-slimscroll/jquery.slimscroll.min.js') }}" type="text/javascript"></script>
<script src="{{ asset(GLOBAL~'plugins/jquery.blockui.min.js') }}" type="text/javascript"></script>
<script src="{{ asset(GLOBAL~'plugins/bootstrap-switch/js/bootstrap-switch.min.js') }}" type="text/javascript"></script>
<!-- END GLOBAL PLUGINS SCRIPTS -->

<!-- BEGIN PAGE PLUGINS SCRIPTS -->
{% block pagePluginsScripts %}{% endblock %}
<!-- END PAGE PLUGINS SCRIPTS -->

<!-- BEGIN GLOBAL SCRIPTS -->
<script src="{{ asset(PLUGINS~'Toastr/toastr.min.js') }}" type="text/javascript"></script>
<script src="{{ asset(GLOBAL~'scripts/app.min.js') }}" type="text/javascript"></script>
<script src="{{ asset(PUBLIC_JS~'global.js') }}" type="text/javascript"></script>
<!-- END GLOBAL SCRIPTS -->

<!-- BEGIN PAGE SCRIPTS -->
{% block pageScripts %}{% endblock %}
<!-- END PAGE SCRIPTS -->

<!-- BEGIN GLOBAl LAYOUT SCRIPTS -->
{% block globalLayoutScripts %}
    <script src="{{ asset(LAYOUTS~'layout4/scripts/layout.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset(LAYOUTS~'layout4/scripts/demo.min.js') }}" type="text/javascript"></script>
{% endblock %}
<!-- END GLOBAl LAYOUT SCRIPTS -->

{% block javascripts %}{% endblock %}
</body>
</html>
